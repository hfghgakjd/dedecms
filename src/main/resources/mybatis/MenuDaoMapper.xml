<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.snowfog.dao.MenuDao">
    <select id="getMenuByParentId" resultType="com.snowfog.entity.Menu">
        select * from t_system_accordion t where t.parentId = #{parentId}
    </select>
    <select id="getMenuTrees" resultType="com.snowfog.entity.TreeNode">
        select * from t_system_menu t where t.parentId = #{parentId}
    </select>
</mapper>